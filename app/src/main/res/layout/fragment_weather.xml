<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="soomin.carwash.WeatherFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/day1"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:adjustViewBounds="false"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/day9"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView10"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView13"
        android:padding="3dp"
        app:srcCompat="@drawable/w01d" />

    <TextView
        android:id="@+id/day1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:text="오늘"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:text="내일"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/day2"
        android:text="2일 후"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day4"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/day3"
        android:text="3일 후"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day5"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView4"
        android:text="4일 후"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day6"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView5"
        android:text="5일 후"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day7"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/day6"
        android:text="6일 후"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day8"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView8"
        android:layout_below="@+id/imageView"
        android:text="7일 후"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day9"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/day10"
        android:layout_alignBottom="@+id/day10"
        android:layout_toEndOf="@+id/imageView8"
        android:text="8일 후"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day10"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView9"
        android:text="9일 후"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day11"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/day10"
        android:layout_alignBottom="@+id/day10"
        android:layout_toEndOf="@+id/imageView3"
        android:text="10일 후"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day12"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/day11"
        android:layout_alignBottom="@+id/day11"
        android:layout_toEndOf="@+id/imageView11"
        android:text="11일 후"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day13"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/day12"
        android:layout_alignBottom="@+id/day12"
        android:layout_toEndOf="@+id/imageView12"
        android:text="12일 후"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/day14"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/day13"
        android:layout_alignBottom="@+id/day13"
        android:layout_toEndOf="@+id/imageView13"
        android:text="13일 후"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

</RelativeLayout>
