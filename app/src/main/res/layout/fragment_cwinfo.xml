<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:context="soomin.carwash.CWInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/cwName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="cwName"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cwType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cwName"
        android:layout_below="@+id/cwName"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivNavi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cwName"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/navi" />

    <TextView
        android:id="@+id/tvDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivNavi"
        android:layout_below="@+id/ivNavi"
        android:layout_marginBottom="7dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textSize="12sp" />
</RelativeLayout>
